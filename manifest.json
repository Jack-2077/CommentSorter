{
  "manifest_version": 3,
  "name": "Commento",
  "version": "1.0",
  "description": "Sort YouTube comments by newest, oldest, top, or worst",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"]
}
