{
  "manifest_version": 3,
  "name": "Commento",
  "version": "2.0",
  "description": "Sorts YouTube comments by various criteria.",
  "icons": {
    "16": "src/icons/icon-16.png",
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["src/js/content.js"],
      "run_at": "document_end"
    }
  ]
}
